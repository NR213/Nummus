<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ViewActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter"
        android:layout_alignBottom="@+id/btnView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="61dp" />

    <TextView
        android:id="@+id/texttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#E19F9F"
        android:drawableStart="@drawable/ic_baseline_description_24"
        android:drawableLeft="@drawable/ic_baseline_description_24"
        android:drawablePadding="5dp"
        android:drawableTint="@color/black"
        android:fontFamily="@font/ageopersonalusebold"
        android:text="Please enter the details below"
        android:textAlignment="center"
        android:textColor="@color/black"

        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="258dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="816dp"
        android:fontFamily="@font/ageopersonalusebold"
        android:text="Category"
        android:textAlignment="center"
        android:textColor="@color/black" />




    <Spinner
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/ageopersonalusebold"
        android:hint="paymentMethod"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:spinnerMode="dropdown"

        android:textSize="96sp" />

    <Spinner
        android:id="@+id/paymentMethoddrop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="260dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/ageopersonalusebold"
        android:hint="paymentMethod"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:spinnerMode="dropdown"

        android:textSize="96sp" />

    <Spinner
        android:id="@+id/incomecat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="140dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/ageopersonalusebold"
        android:hint="paymentMethod"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:spinnerMode="dropdown"

        android:textSize="96sp" />

    <Spinner
        android:id="@+id/expensecat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/ageopersonalusebold"
        android:hint="paymentMethod"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:spinnerMode="dropdown"

        android:textSize="96sp" />








    <Button
        android:id="@+id/btnView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="84dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="15dp"

        android:fontFamily="@font/ageopersonalusebold"
        android:text="View details"
        android:textSize="20dp"
        app:backgroundTint="#E19F9F"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintVertical_bias="0.111"
        tools:layout_editor_absoluteX="0dp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputview"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="32dp"
        android:hint="Date"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/black"
        app:endIconTint="@color/black"
        app:helperTextTextColor="@color/black"
        app:hintEnabled="true"
        app:hintTextColor="@color/black"
        app:startIconTint="@color/black">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_button"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:editable="false"
            android:textColorHint="@color/black"

            />

    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:id="@+id/incomecat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="730dp"
        android:fontFamily="@font/ageopersonalusebold"
        android:text="Income Category"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/paymentmethod1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="732dp"
        android:fontFamily="@font/ageopersonalusebold"
        android:text="Payment method"
        android:textAlignment="center"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/expensecat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="279dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="730dp"
        android:fontFamily="@font/ageopersonalusebold"
        android:text="Expense Category"
        android:textAlignment="center"
        android:textColor="@color/black" />






    </RelativeLayout>